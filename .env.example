# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_org_id_here  # Optional

# Milvus Configuration
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_USER=
MILVUS_PASSWORD=
MILVUS_COLLECTION_NAME=harel_insurance_kb

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSION=3072

# LLM Configuration
LLM_PROVIDER=qwen  # Options: qwen, openai, claude
LLM_MODEL=Qwen/Qwen2.5-72B-Instruct
LLM_BASE_URL=https://api.studio.nebius.ai/v1  # Nebius Token Factory
LLM_API_KEY=your_nebius_api_key_here
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1000
# Fallback LLM
FALLBACK_LLM_PROVIDER=openai
FALLBACK_LLM_MODEL=gpt-4o

# Retrieval Configuration
RETRIEVAL_TOP_K=5
RETRIEVAL_SIMILARITY_THRESHOLD=0.7
CHUNK_SIZE=1024  # Base chunk size
CHUNK_OVERLAP=100
ENABLE_RERANKING=true
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-12-v2

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Evaluation Configuration
EVAL_DATASET_PATH=data/evaluation/reference_questions.json
EVAL_OUTPUT_DIR=data/evaluation/results

# Data Paths
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
EMBEDDINGS_DIR=data/embeddings

# Scraping Configuration
HAREL_BASE_URL=https://www.harel-group.co.il/insurance
SCRAPING_DELAY=1.0  # Seconds between requests
SCRAPING_MAX_RETRIES=3

# Optional: Alternative LLM Providers
# ANTHROPIC_API_KEY=your_anthropic_key
# COHERE_API_KEY=your_cohere_key
# HUGGINGFACE_API_KEY=your_hf_key

# Optional: Monitoring & Observability
# OPIK_API_KEY=your_opik_key
# LANGSMITH_API_KEY=your_langsmith_key
# LANGSMITH_PROJECT=harel-insurance-chatbot

# Optional: Voice Support
# ELEVENLABS_API_KEY=your_elevenlabs_key
# WHISPER_MODEL=whisper-1

# Development Settings
DEBUG=false
ENABLE_CACHE=true
CACHE_TTL=3600  # Seconds

